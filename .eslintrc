{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"plugins": ["react", "wpcalypso"],
	"extends": ["plugin:react/recommended", "wpcalypso", "wpcalypso/react"],
	"settings": {
		"react": {
			"pragma": "React"
		}
	},
	"rules": {
		"array-bracket-spacing": 0,
		"camelcase": 1,
		"computed-property-spacing": 0,
		"max-len": [2, { "code": 100, "tabWidth": 1 }],
		"react/jsx-curly-spacing": 0,
		"react/react-in-jsx-scope": 0,
		"space-in-parens": [1, "never"],
		"space-unary-ops": [1, { "nonwords": false }],
		"template-curly-spacing": 0,
		"wpcalypso/import-docblock": 0,
		"wpcalypso/jsx-classname-namespace": 0,
		"react/no-unescaped-entities": 0,
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}]
	},
	"globals": {
		"describeModule": true
	}
}
